{
  "name": "awesome-skeleton",
  "version": "0.1.1",
  "description": "骨架图生成器",
  "author": "",
  "main": "src/index.js",
  "bin": {
    "skeleton": "bin/skeleton.js"
  },
  "scripts": {
    "dev": "rollup --config rollup.config.js --watch",
    "build": "rollup --config rollup.config.js",
    "lint": "npm run build && eslint . --fix",
    "test": "nyc mocha",
    "ci": "npm run lint && npm run test",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add .",
    "prepublishOnly": "np --yolo --no-publish"
  },
  "dependencies": {
    "base64-img": "^1.0.4",
    "commander": "^3.0.1",
    "html-minifier": "^4.0.0",
    "images": "^3.0.2",
    "puppeteer": "^1.2.0",
    "update-notifier": "^3.0.1",
    "xutil": "^1.0.11"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.2.0",
    "commitlint": "^8.2.0",
    "conventional-changelog-cli": "^2.0.23",
    "eslint": "^6.3.0",
    "eslint-config-egg": "^7.5.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "rollup": "^1.20.3"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kaola-fed/awesome-skeleton.git"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "git add"
    ]
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "bugs": {
    "url": "https://github.com/kaola-fed/awesome-skeleton/issues"
  },
  "engines": {
    "node": ">=8.9.0"
  }
}
